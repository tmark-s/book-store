<h1>List of book</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Price</th>
		<th>Description</th>
		<th>Catagory</th>
	</tr>

	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= book.price %></td>
			<td><%= book.description %></td>
			<td><%= book.category.categoryname if book.category %></td>
			<td><%= link_to 'Edit', edit_book_path(book) %></td>
			<td><%= link_to 'Show', book_path(book) %></td>
			<td><%= link_to 'Delete', book_path(book), method: :delete, data: {confirm: "Are you sure to delete this book?"} %></td>
		</tr>
	<% end %>
</table>