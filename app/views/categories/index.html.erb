<h1>List of category</h1>

<table>
	<tr>
		<th>Category</th>
	</tr>

	<% @categories.each do |category| %>
		<tr>
			<td><%= link_to category.categoryname, category_path(category) %> </td>
			<td><%= link_to "Edit", edit_category_path(category) %></td>
			<td><%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure to delete this category?"} %></td>
		</tr>
	<% end %>
</table>