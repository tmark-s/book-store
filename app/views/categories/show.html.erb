<h1>Show category</h1>

<p>
	<%= @category.categoryname %>
</p>

<table>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Price</th>
		<th>Description</th>
	</tr>

	<% @category.books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= book.price %></td>
			<td><%= book.description %></td>
		</tr>
	<% end %> 
</table>