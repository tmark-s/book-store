<h1 align="center">Shipping</h1>

<%= render 'shared/errors', obj: @shippingaddress %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@shippingaddress, url: checkout_shipping_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :address %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :address, rows: 10, class: "form-control", placeholder: "address", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit("Continue", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
  </div>
</div>