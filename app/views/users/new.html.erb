<h1>Create new user</h1>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :firstname %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :firstname, class: "form-control", placeholder: "firstname", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :lastname %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :lastname, class: "form-control", placeholder: "lastname", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :dateofbirth %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :dateofbirth, class: "form-control", placeholder: "yyyy-mm-dd", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :address %>
				</div>
				<div class="col-sm-8">
					<%= f.text_area :address, rows: 10, class: "form-control", placeholder: "address", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>
	</div>
</div>